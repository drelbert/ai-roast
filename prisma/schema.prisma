generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clerkId  String       @unique
  email    String       @unique
  entries  RoastEntry[]
  analysis Analysis[]

  // using the enum 
  role Role @default(USER)
}

model RoastEntry {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  // is this illustrating the relation?
  // is this the foreign key as it describes a relation
  user      User     @relation(fields: [userId], references: [id])

  content  String    @db.Text
  // could add entry name, then update api/roast/route.ts
  analysis Analysis?

  // compound index with two values 
  @@unique([userId, id])
}

model Analysis {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entryId String
  entry   RoastEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  // adding  the relationship so each anlysis is joined with their user
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roast          String
  summary        String  @db.Text
  color          String
  negative       Boolean
  subject        String
  sentimentScore Float   @default(0)

  @@unique([entryId])
  @@index([userId])
}

enum Role {
  USER
  ADMIN
}
